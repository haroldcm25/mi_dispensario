<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="mi_dispensario_forma_form_view" model="ir.ui.view">
		<field name="name">dispensario_forma_form</field>
		<field name="model">forma</field>
		<field name="arch" type="xml">
			<form string="Forma">
				<header>
<!--					<button name="funcion_mi_boton" string="Mi botón" type="object" class="btn btn-warning"/>-->
				</header>
				<sheet>
					<group>
						<field name="name"/>
					</group>
				</sheet>
			</form>
		</field>
	</record>

	<record id="mi_dispensario_forma_tree_view" model="ir.ui.view">
		<field name="name">dispensario_forma_tree</field>
		<field name="model">forma</field>
		<field name="arch" type="xml">
			<tree string="Forma">
				<field name="name"/>
			</tree>
		</field>
	</record>

	<record id="action_forma_rvc" model="ir.actions.act_window">
		<field name="name">Forma farmacéutica</field>
		<field name="res_model">forma</field>
		<field name="type">ir.actions.act_window</field>
		<field name="view_mode">tree,form</field>
	</record>

	<menuitem
		id="hr_menu_forma_rvc"
		name="Forma farmacéutica"
		action="action_forma_rvc"
		parent="mi_dispensario.mi_dispensario_menu_principal"
		sequence="2"
		groups="mi_dispensario.group_mi_dispensario_user"/>

</odoo>